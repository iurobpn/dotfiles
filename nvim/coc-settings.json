{
    "languageserver": {
        "lua": {
            "cwd": "/home/gagarin/git/lua-language-server",
            "command": "/home/gagarin/git/lua-language-server/bin/lua-language-server",
            "filetypes": ["lua"],
            "rootPatterns": [".git/"]
        }
    },
    "settings": {
        "Lua": {
            "workspace": {
                "library": [
                ],
                "maxPreload": 2000,
                "preloadFileSize": 1000
            },
            "runtime": {
                "version": "LuaJIT"
            },
            "diagnostics": {
                "enable": true,
                "globals": ["hs", "vim", "it", "describe", "before_each", "after_each"],
                "disable": ["lowercase-global"],
                "workspaceEvent": "none",
                "workspaceRate": 0,
            },
            "completion": {
                "keywordSnippet": "Disable"
            }
        },
        "clangd": {
            "enable": true,
            "path": "/usr/bin/clangd",
            "args": ["-log=verbose", "-pretty", "--background-index", "--clang-tidy"],
            "filetypes": ["c","cpp","objc","objcpp", "h", "hpp"],
            "rootPatterns": [".git/","compile_commands.json"],
            "semanticTokens": { 
                "enable": true
            }
        },
    }
}
