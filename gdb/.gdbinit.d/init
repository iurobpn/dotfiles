# vim: set ft=gdb
define pr
    dashboard -layout !
end
define hookpost-pr
  dashboard
end
define ps
  dashboard -layout source breakpoints stack history variables
  dashboard source -style height 20
end

define pa
  dashboard -layout registers assembly memory stack
end
define hookpost-pa
  dashboard
end

define logout
    set logging file gdb.txt
    set logging overwrite on
    set logging redirect on
    set logging on
end

define get-python-version
    python
        import sys
        print(sys.version)
    end
end

document get-python-version
    Print the version of Python embedded within this GDB.
end

define continue-breakpoint
    python gdb.post_event(lambda: gdb.execute('continue'))
end

define hookpost-up
  dashboard
end

define hookpost-down
  dashboard
end

define hookpost-frame
  dashboard
end
